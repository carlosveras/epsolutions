@model IEnumerable<EPSolutions.Models.ItensRomaneio>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/EPSolutions.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div>
    @if (Model != null && Model.Any())
    {
        @* <form asp-controller="Romaneio" asp-action="Entregar" method="post"> *@
            <form  method="post">
                <div class="container">
                <h1><strong>Romaneio : @TempData["IdRomaneio"]</strong></h1>
                <table class="table table-hover table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Caixa</th>
                            <th>Volumes</th>
                            <th>Descricao</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NrCaixa</td>
                                <td>@item.DescrVolumes</td>
                                <td><input type="checkbox" name="Entregue" value="@item.Id" @(item.Entregue ?? false ? "checked" : "") /></td>

                                <input type="hidden" asp-for="@item.Id" />
                                <input type="hidden" asp-for="@item.NrCaixa" />
                                <input type="hidden" asp-for="@item.DescrVolumes" />
                                <input type="hidden" asp-for="@item.Entregue" />
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-6">
                        <div class="text-left">
                            <button class="btn btn-sm btn-success my-2 my-sm-0 form-control form-control-sm" type="submit" data-toggle="tooltip" title="Salvar">Salvar</button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-left">
                            <a class="btn btn-sm btn-secondary my-2 my-sm-0 form-control form-control-sm" asp-action="Index" data-toggle="tooltip" title="Editar">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>
